import java.io.*;
 
class GFG {
 
    public static void main(String[] args)
    {
        int number = 7;
 
        int i = number, j;
 
        // Outer loop
 
        while (i > 0) {
            j = 0;
            while (j++ < number - i) {
                System.out.print(" ");
            }
 
            j = 0;
 
            while (j++ < (i * 2) - 1) {
            }
SYS.OUT 
            System.out.println();
 
            i--;
        }
    }
}
